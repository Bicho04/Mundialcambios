mixin img(carpeta, nombre, extencion)
	img(src="assets/img/#{carpeta}#{nombre}.#{extencion}", alt="Mundial Cambios - #{nombre}")

mixin local(local, calle, telefono, ubicacion)
	.local
		h4 #{local}
		p #{calle}
		p #{telefono}
		.ubicacion
			.modal
				label(for="modal-#{ubicacion}")
					.modal-trigger 
						i.icon-compas
						| Ubicación
				input.modal-state(id="modal-#{ubicacion}" type="checkbox")
				.modal-fade-screen 
					.modal-inner 
						.modal-close(for="modal-#{ubicacion}")
						.mapa(id="#{ubicacion}")

mixin exchange(ico,moneda,compra,venta)
	tr
		td.pais
			i(class="moneda #{ico}")
			span #{moneda}
		td.compra #{compra}
		td.venta #{venta}

mixin arb-exchange(ico1,ico2,moneda,compra,venta)
	tr
		td.pais
			i(class="moneda #{ico1}")
			i(class="moneda #{ico2}")
			span #{moneda}
		td.compra #{compra}
		td.venta #{venta}

mixin clima(dia,ico,max,min,detalle)
	.clima-dia
		p.dia #{dia}
		span(class="icon-#{ico}") 
		p.max #{max}°
		p.min #{min}°
		p.modo #{detalle}

